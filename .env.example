# .env.example - Copia este archivo como .env y configura tus valores

# SERVIDOR
NODE_ENV=development
PORT=3000
HOST=localhost

# BASE DE DATOS
DB_PATH=./database/encuentrapet.db

# SEGURIDAD
JWT_SECRET=encuentrapet_secret_key_cambiar_en_produccion
JWT_EXPIRE=7d
BCRYPT_ROUNDS=10

# URLs
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# EMAIL (Configurar con tu cuenta de Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_contrase√±a_de_aplicacion

# SMS (Opcional - Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# UPLOADS
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# RATE LIMITING
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# LOGS
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ADMIN (Cuenta admin por defecto)
ADMIN_EMAIL=admin@encuentrapet.com
ADMIN_DEFAULT_PASSWORD=Admin2024!